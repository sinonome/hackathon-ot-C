<div class="container">
    <div class="row">
        <h1>Node Chat サンプル</h1>
    </div>
    <div class="row">
        <form method="post" action="/room" name="enterRoomForm">
            <div class="index-user_name">
                ユーザ名
                <input type="text" id="userName" name="userName" class="index-user_name_text">
            </div>

            <div>
                パスワード
                <input type="password" id="password" name="password">
            </div>

            {{!-- プルダウンセレクトボックスの追加 --}}
            <div>チャットルーム<br>
                <select name="roomNumber" id="roomNumber">
                    <option value="room1">room1</option>
                    <option value="room2">room2</option>
                    <option value="room3">room3</option>
                    <option value="room4">room4</option>
                    <option value="room5">room5</option>
                </select>

            </div>
            <div class="index-enter">
                {{!-- <input type="button" value="入室する" class="common-button index-enter_button" onclick="enter();"> --}}
                <input type="button" value="入室する" class="common-button index-enter_button" onclick="signIn();">
            </div>
        </form>

        {{!-- 新規アカウント登録ボタン --}}
        <div>
            <form name="enterSignUpForm" method="post" action="/sign_up">
                <input type="button" value="新規アカウント登録" onclick="enterSignUp();">
            </form>
        </div>


    </div>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/index.js"></script>
<script src="/javascripts/sign_up.js"></script>
<script src="/javascripts/sign_in.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/make_db.js"></script>
